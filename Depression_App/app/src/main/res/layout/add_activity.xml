<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#aaf000">

    <TextView
        android:text="Please type what activity helped you relax!\n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView100"
        android:layout_weight="0.10"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText90"
        android:hint="Max 250 characters"
        android:textSize="24sp"
        android:layout_weight="0.91"
        android:selectAllOnFocus="false"
        android:gravity="top"
        />

    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button160"
        android:onClick="submit123"/>

    <Button
        android:text="Cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button170"
        android:onClick="cancel7"/>

</LinearLayout>